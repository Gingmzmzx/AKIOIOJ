.truncate
  position: relative;
  overflow: hidden;
  transition: max-height .3s ease-in-out;

.truncate-mask
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 100%);
  opacity: 0;
  transition: opacity .3s ease-in-out;
  pointer-events: none;

.truncate-mask.visible
  opacity: 1;

.truncate-toggle-button
  background-color: #007BFF;
  color: white;
  border: none;
  padding: 10px 15px;
  border-radius: 5px;
  cursor: pointer;
  font-size: 16px;
  position: absolute;
  bottom: 10px;
  left: 50%;
  transform: translateX(-50%);
  z-index: 114514;
  transition: background-color .3s;

.truncate-toggle-button:hover
  background-color: #0056b3;
